
<h1><%= "Welcome!" %> </h1>
<br><h2>Here are all the decorations</h2><br>

<% Decoration.all.each do |decoration| %>
<a href="/decorations/<%= decoration.id %>"><%= decoration.dec_name %></a> belongs to:
<%= decoration.plant.name %>

<a href="/decorations/<%=decoration.id %>/edit">Edit</a>
<form action="/decorations/<%= decoration.id %>/delete" method="post">
    <input type="hidden" name="_method" value="delete">
    <button type="submit">Delete</button>
</form>

<br><br>
<% end %>

<h2> Add a decoration here: </h2>
<a href="/decorations/new">New Decoration</a><br>

